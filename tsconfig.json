{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",

    "strict": true,
    "noImplicitAny": true,

    "esModuleInterop": true,
    "moduleResolution": "Node",

    "baseUrl": ".",
    "paths": {
      "@tests/*": ["tests/*"],
      "@fixtures/*": ["tests/fixtures/*"],
      "@ui/*": ["tests/ui/*"],
      "@src/*": ["src/*"]
    },

    "types": ["node", "@playwright/test"]
  },
  "include": [
    "tests",
    "src",
    "playwright.config.ts"
  ]
}